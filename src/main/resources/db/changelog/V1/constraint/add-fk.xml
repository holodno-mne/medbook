<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="add-fk-account-role" author="holodno">
        <addForeignKeyConstraint constraintName="fk_account_role"
                                 baseTableName="account"
                                 baseColumnNames="role_id"
                                 referencedTableName="role"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="account" constraintName="fk_account_role"/>
        </rollback>
    </changeSet>

    <changeSet id="add-fk-account_permissions-account" author="holodno">
        <addForeignKeyConstraint constraintName="fk_account_permissions_account"
                                 baseTableName="account_permissions"
                                 baseColumnNames="account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="account_permissions" constraintName="fk_account_permissions_account"/>
        </rollback>
    </changeSet>

    <changeSet id="add-fk-account_permissions-permission" author="holodno">
        <addForeignKeyConstraint constraintName="fk_account_permissions_permission"
                                 baseTableName="account_permissions"
                                 baseColumnNames="permission_id"
                                 referencedTableName="permission"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="account_permissions" constraintName="fk_account_permissions_permission"/>
        </rollback>
    </changeSet>

    <changeSet id="add-fk-role_permissions-permission" author="holodno">
        <addForeignKeyConstraint constraintName="fk_role_permissions_permission" baseTableName="role_permissions"
                                 baseColumnNames="permission_id"
                                 referencedTableName="permission"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="role_permissions" constraintName="fk_role_permissions_permission"/>
        </rollback>
    </changeSet>

    <changeSet id="add-fk-role_permissions-role" author="holodno">
        <addForeignKeyConstraint constraintName="fk_role_permissions_role"
                                 baseTableName="role_permissions"
                                 baseColumnNames="role_id"
                                 referencedTableName="role"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="role_permissions" constraintName="fk_role_permissions_role"/>
        </rollback>
    </changeSet>

    <changeSet id="add-fk-application-account" author="holodno">
        <addForeignKeyConstraint constraintName="fk_application_account"
                                 baseTableName="application"
                                 baseColumnNames="account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="application" constraintName="fk_application_account"/>
        </rollback>
    </changeSet>
    
</databaseChangeLog>